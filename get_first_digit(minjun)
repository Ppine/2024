#include <stdio.h>

int get_first_digit(int n)
{
    for(;;)
    {
        n=n/10;
        int b=0;
        if(n==0)
        {
            printf("\n가장 상위 자리수는 %d입니다.",b);
            return 0;
        }
        else b=n;
    }
}

int main(void)
{
    int a;
    printf("정수를 입력하시오: ");
    scanf("%d",&a);
    get_first_digit(a);
    return 0;
}
